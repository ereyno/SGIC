@model SGIC.Models.Telefono

<script src="@Url.Content("~/Scripts/jquery-1.5.1.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>Telefono</legend>

        <div class="editor-label">
            @Html.LabelFor(model => model.TipoTelefonoID, "Tipo")
        </div>
        <div class="editor-field">
            @Html.DropDownList("TipoTelefonos", String.Empty)
            @Html.ValidationMessageFor(model => model.TipoTelefonoID)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.codigoArea) | @Html.LabelFor(model => model.primerParte)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.codigoArea) - @Html.EditorFor(model => model.primerParte) - @Html.EditorFor(model => model.segundaParte)
            @Html.ValidationMessageFor(model => model.codigoArea)
            @Html.ValidationMessageFor(model => model.primerParte)
            @Html.ValidationMessageFor(model => model.segundaParte)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.isPrincipal)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.isPrincipal)
            @Html.ValidationMessageFor(model => model.isPrincipal)
        </div>

        <p>
            <input type="submit" value="Create" />
        </p>
    </fieldset>
}
