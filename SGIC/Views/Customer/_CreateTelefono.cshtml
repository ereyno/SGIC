@model SGIC.ViewModel.PersonaViewModel

<script src="@Url.Content("~/Scripts/jquery-1.5.1.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm("Create", "Telefono")) {
    @Html.ValidationSummary(true)
    @Html.HiddenFor(model => model.persona.PersonaID)
    @Html.HiddenFor(model => model.persona.direccion)
    @Html.HiddenFor(model => model.persona.nombre)
    <fieldset>
        <legend>Telefono</legend>

        <div class="editor-label">
            @Html.LabelFor(model => model.nuevoTelefono.tipo, "Tipo")
        </div>
        <div class="editor-field">
            @Html.DropDownListFor(model => model.nuevoTelefono.TipoTelefonoID, (IEnumerable<SelectListItem>)ViewBag.TipoTelefonoID, String.Empty)
            @Html.ValidationMessageFor(model => model.nuevoTelefono.TipoTelefonoID)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.nuevoTelefono.codigoArea) | @Html.LabelFor(model => model.nuevoTelefono.primerParte)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.nuevoTelefono.codigoArea) - @Html.EditorFor(model => model.nuevoTelefono.primerParte) - @Html.EditorFor(model => model.nuevoTelefono.segundaParte)
            @Html.ValidationMessageFor(model => model.nuevoTelefono.codigoArea)
            @Html.ValidationMessageFor(model => model.nuevoTelefono.primerParte)
            @Html.ValidationMessageFor(model => model.nuevoTelefono.segundaParte)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.nuevoTelefono.isPrincipal)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.nuevoTelefono.isPrincipal)
            @Html.ValidationMessageFor(model => model.nuevoTelefono.isPrincipal)
        </div>
        <p>
            <input type="submit" value="Create" />
        </p>
    </fieldset>
}
